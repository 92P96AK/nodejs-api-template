{
  "name": "nodejs-api-template",
  "version": "0.0.1",
  "description": "description",
  "main": "dist/index.js",
  "scripts": {
    "start-dev": "ts-node-dev --no-notify --respawn  --transpile-only --exit-child --clear ./server.ts",
    "start": "forever start -v -c ts-node ./server.ts",
    "migrate-dev": "prisma migrate dev",
    "migrate-deploy": "prisma migrate deploy",
    "prisma:gen": "prisma generate",
    "lint-staged": "lint-staged",
    "db": "prisma studio",
    "format": "eslint -c .eslintrc.js --ignore-path .eslintignore --fix",
    "git-add": "git add ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pradipkharal7/nodejs-api-template.git"
  },
  "author": "Pradip Kharal",
  "homepage": "https://github.com/pradipkharal7/nodejs-api-template#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.11.26",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.0",
    "prisma": "^3.10.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "@types/body-parser": "^1.19.5",
    "@types/redis": "^4.0.11",
    "axios": "^0.26.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^10.0.0",
    "express": "^4.19.2",
    "forever": "^4.0.3",
    "husky": "^7.0.4",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^12.5.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pre-commit": "^1.2.2",
    "redis": "^4.6.13",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^8.3.2",
    "winston": "^3.13.0",
    "winston-slack-webhook-transport": "^2.3.5",
    "yup": "^0.32.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "git-add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "license": "MIT"
}
